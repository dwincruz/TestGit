@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>

        const itemsStatus = document.querySelectorAll('.text-status-color')

        const partsCondition = async (items) => {
            try {
                await items.forEach(item => {
                    switch (item.innerText) {
                        case "Good for Service":
                            // item.style.backgroundColor = "#93c54b"
                            item.style.backgroundColor = "#1e325c"
                            break;
                        case "For Monitoring":
                            //item.style.backgroundColor = "#ffff33"
                            item.style.backgroundColor = "#FFB41B"
                            item.style.color = "#1E325C"

                            break;
                        case "Needs Repair":
                            // item.style.backgroundColor = "#cd5c5c"
                            item.style.backgroundColor = "#92140C"
                            break;
                        default:
                            item.style.color = "#494949"
                            item.style.backgroundColor = "#f2f2f2"
                    }
                })
            } catch (error) {
                console.log(error)
            }

        }
        partsCondition(itemsStatus)



        const deleteMaintenanceRecord = () => {
            try {
                const targetValue = document.querySelector('#targetValue');
                const confirmValue = document.querySelector('#confirmValue');
                const confirmInput = document.querySelector('#confirmInput');
                const btnTrigger = document.querySelector('#confirmDelete')
                confirmValue.innerText = `Delete ${targetValue.value}`

                confirmInput.addEventListener('change', e => {
                    if (e.target.value === confirmValue.innerText) {
                        btnTrigger.removeAttribute('disabled')
                    }
                    else {
                        btnTrigger.setAttribute('disabled', '')
                    }
                })

            } catch (error) {
                console.log(error)
            }
        }
        deleteMaintenanceRecord()
    </script>

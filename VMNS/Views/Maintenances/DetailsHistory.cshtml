                        <div>
                            <strong>Plate Number</strong>
                            <h3 class="fw-bolder text-break  m-0">@Html.DisplayFor(model => model.Vehicle.PlateNo)</h3>
                            <span><small>Currently Viewed</small></span>
                        </div>

                        <img src="/@ViewData["VehicleImage"]" height="" width="50%">
                    </div>
                    <div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12  mb-4">
                <div class="box-lra-shadow bg-white rounded p-3">

@model VMNS.Areas.Identity.Data.ApplicationRole

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Body.cshtml";
}
<form asp-action="Edit">
    <div class="row mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="NormalizedName" />
        <input type="hidden" asp-for="ConcurrencyStamp" />
        <div class="col-md-6 col-sm-4 col-6 my-auto">
            <h2><i class="ri-key-2-line icon text-lra-primary"></i> Edit Role</h2>
        </div>
        <div class="col-md-6 col-sm-6 col-6  my-auto position-relative">
            <div class="float-end">
                <a asp-area="" asp-controller="RolesAdmin" asp-action="Index" class="btn btn-sm text-capitalize bg-white box-lra-shadow rounded"><i class="ri-arrow-go-back-line"></i> Go Back</a>
                <button type="submit" class="btn btn-sm  text-white text-capitalize bg-lra-primary box-lra-shadow rounded "><i class="ri-save-line"></i> Save</button>
            </div>
        </div>
        <div class="col-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row px-3 bg-white box-lra-shadow rounded">
            <div class="col-lg-7 col-sm-7 col-12 pt-3">
                <div class="row">
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <input type="text"
                                       asp-for="Name"
                                       id="targetValue"
                                       class="form-control"
                                       required
                                       pattern="\S+.*" />
                                <div class="input-text"><label asp-for="Name"></label></div>
                            </div>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="offset-lg-6"></div>
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <input type="text"
                                       asp-for="Description"
                                       id=""
                                       class="form-control"
                                       required
                                       pattern="\S+.*" />
                                <div class="input-text"><label asp-for="Description"></label></div>
                            </div>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="offset-lg-6"></div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

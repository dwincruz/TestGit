@model VMNS.Models.Extra

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Body.cshtml";
}
<form class="row mt-3" asp-action="Create">
    <div class="col-md-6 col-sm-4 col-6 my-auto">
        <h2><i class="ri-tools-fill text-lra-primary"></i> Add Accessories</h2>
    </div>
    <div class="col-md-6 col-sm-6 col-6  my-auto  position-relative">
        <div class="float-end">
            <a asp-area="" asp-controller="Extras" asp-action="Index" class="btn btn-sm text-capitalize bg-white box-lra-shadow rounded"><i class="ri-arrow-go-back-line"></i> Go Back</a>
            <button asp-action="Create" type="submit" class="btn btn-sm text-dark text-capitalize bg-lra-warning box-lra-shadow rounded "><i class="ri-save-line"></i> Save</button>
        </div>
    </div>
    <div class="col-12">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="row p-3 bg-white box-lra-shadow rounded">
        <div class="col-lg-7 col-sm-7 col-12 pt-3">
            <div class="row">
                <div class="col-lg-6 col-12 mb-4">
                    <div class="input-group" id="">
                        <div id="" class="custom-input w-100">
                            <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                            <div class="input-text"><label>Vehicle Type</label></div>
                        </div>
                    </div>
                    <span asp-validation-for="VehicleId" class="text-danger"></span>
                </div>
                <div class="col-lg-6 col-12 mb-4">
                    <div class="input-group" id="">
                        <div id="" class="custom-input w-100">
                            <input type="text"
                                   asp-for="Tools"
                                   id="insuranceDate"
                                   class="form-control "
                                   required
                                   pattern="\S+.*" />
                            <div class="input-text"><label asp-for="Tools"></label></div>
                        </div>
                    </div>
                    <span asp-validation-for="Tools" class="text-danger"></span>
                </div>
                <div class="col-lg-6 col-12 mb-4">
                    <div class="input-group" id="">
                        <div id="" class="custom-input w-100">
                            <input type="text"
                                   asp-for="Remarks"
                                   id="insuranceDate"
                                   class="form-control "
                                   required
                                   pattern="\S+.*" />
                            <div class="input-text"><label asp-for="Remarks"></label></div>
                        </div>
                    </div>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="col-lg-6 col-12 mb-4">
                    <div class="input-group" id="">
                        <div id="" class="custom-input w-100">
                            <input type="text"
                                   asp-for="Manuals"
                                   id=""
                                   class="form-control"
                                   required
                                   pattern="\S+.*" />
                            <div class="input-text"><label asp-for="Manuals"></label></div>
                        </div>
                    </div>
                    <span asp-validation-for="Manuals" class="text-danger"></span>
                </div>
                <div class="col-lg-6 col-12 mb-4">
                    <div class="input-group" id="">
                        <div id="" class="custom-input w-100">
                            <input type="text"
                                   asp-for="SpareTires"
                                   id=""
                                   class="form-control"
                                   required
                                   pattern="\S+.*" />
                            <div class="input-text"><label asp-for="SpareTires"></label></div>
                        </div>
                    </div>
                    <span asp-validation-for="SpareTires" class="text-danger"></span>
                </div>            
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @*<partial name="_ValidationScriptsPartial" />*@
}

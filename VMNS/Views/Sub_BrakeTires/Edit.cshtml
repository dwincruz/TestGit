@model VMNS.Models.Sub_BrakeTires

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Body.cshtml";
    var currentValues = new[] { "Good for Service", "For Monitoring", "Needs Repair" };

}
<form asp-action="Edit">
    <div class="row mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="col-md-6 col-sm-4 col-6 my-auto">
            <h2><i class="ri-car-fill text-lra-primary"></i>  Brakes and Tires</h2>
        </div>
        <div class="col-md-6 col-sm-6 col-6  my-auto position-relative">
            <div class="float-end">
                <a asp-area="" asp-controller="Maintenances" asp-action="Details" asp-route-Id=@ViewData["MaintenanceId"] class="btn btn-sm text-capitalize bg-white box-lra-shadow rounded"><i class="ri-arrow-go-back-line"></i> Go Back</a>
                <button type="submit" class="btn btn-sm  text-white text-capitalize bg-lra-primary box-lra-shadow rounded "><i class="ri-save-line"></i> Save</button>
            </div>
        </div>
        <div class="col-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row bg-white box-lra-shadow rounded d-flex justify-content-center pt-4">
        <div class="col-md-7 col-12">
            <input type="text"
                   asp-for="MaintenanceId"
                   id=""
                   class="form-control"
                   required
                   readonly
                   hidden
                   pattern="\S+.*" />
            <table class="table  table-borderless box-lra-shadow2">
                <thead>
                    <tr>
                        <th colspan="4" class="category-name">
                            Wheel Position
                        </th>
                    </tr>
                    <tr>
                        <th colspan="4">
                            <div class="input-group" id="">
                                <div id="" class="custom-input w-100 pt-3">
                                    <input type="text"
                                           id=""
                                           class="form-control"
                                           asp-for="lu_WheelId"
                                           required
                                           readonly
                                           hidden
                                           pattern="\S+.*" />

                                    <input type="text"
                                           id=""
                                           class="form-control"
                                           asp-for="lu_Wheel.WheelPosition"
                                           required
                                           readonly
                                           pattern="\S+.*" />
                                    <div class="input-text"><label>Wheel Position</label></div>
                                </div>
                            </div>
                            <span asp-validation-for="lu_WheelId" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="2">
                            <div class="input-group" id="">
                                <div id="" class="custom-input w-100 pb-3">
                                    <input type="date"
                                            asp-for="AcquisitionDate"
                                            id="dateAcquired"
                                            class="form-control"
                                            required
                                            pattern="\S+.*" />
                                    <div class="input-text"><label asp-for="AcquisitionDate"></label></div>
                                </div>
                            </div>
                        </th>
                            <th colspan="2">
                                <div class="input-group" id="">
                                    <div id="" class="custom-input w-100 pb-3">
                                        <input type="number"
                                               asp-for="LifeSpan"
                                               class="form-control"
                                               required
                                               pattern="\S+.*" />
                                        <div class="input-text"><label asp-for="LifeSpan"></label></div>
                                    </div>
                                </div>
                            </th>
                    </tr>
                    <tr>
                        <th colspan="4" class="category-name">
                            Tire Pressure PSI
                        </th>
                    </tr>
                    <tr>
                        <th colspan="2">
                            <div class="input-group" id="">
                                <div id="" class="custom-input w-100 py-3">
                                    <input type="number"
                                           asp-for="TirePressureBefore"
                                           id=""
                                           class="form-control"
                                           required
                                           pattern="\S+.*" />
                                    <div class="input-text"><label asp-for="TirePressureBefore"></label></div>
                                </div>
                            </div>
                        </th>
                        <th colspan="2">
                            <div class="input-group" id="">
                                <div id="" class="custom-input w-100 py-3">
                                    <input type="number"
                                           asp-for="TirePressureAfter"
                                           id=""
                                           class="form-control"
                                           required
                                           pattern="\S+.*" />
                                    <div class="input-text"><label asp-for="TirePressureAfter"></label></div>
                                </div>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="4" class="good text-white">
                            Good for Service
                        </th>
                    </tr>
                    <tr>
                        <th class="good"></th>
                        <th colspan="3" class="warning">
                            For Monitoring
                        </th>
                    </tr>
                    <tr>
                        <th class="good"></th>
                        <th class="warning"></th>
                            <th colspan="2" class="danger text-white">
                            Needs Repair
                        </th>
                    </tr>

                </thead>
                <tbody>
                    <tr>
                        <td colspan="4" class="category-name">
                            Brakes and Tires
                        </td>
                    </tr>
                    <tr class="condition-row">
                        @foreach (var currentValue in currentValues)
                        {
                            <td class="checkbox-container  text-center">
                                <input type="radio" name="BreakLining" id="@currentValue" class="checkbox-item" value="@currentValue" @(Model.BreakLining == currentValue ? "checked" : "") />
                            </td>
                        }
                        <td>@Html.DisplayNameFor(model => model.BreakLining)</td>
                    </tr>
                    <tr class="condition-row">
                        @foreach (var currentValue in currentValues)
                        {
                            <td class="checkbox-container  text-center">
                                <input type="radio" name="TireTread" id="@currentValue" class="checkbox-item" value="@currentValue" @(Model.TireTread == currentValue ? "checked" : "") />
                            </td>
                        }
                        <td>@Html.DisplayNameFor(model => model.TireTread)</td>
                    </tr>
                    <tr class="condition-row">
                        @foreach (var currentValue in currentValues)
                        {
                            <td class="checkbox-container  text-center">
                                <input type="radio" name="WearPattern" id="@currentValue" class="checkbox-item" value="@currentValue" @(Model.WearPattern == currentValue ? "checked" : "") />
                            </td>
                        }
                        <td>@Html.DisplayNameFor(model => model.WearPattern)</td>
                    </tr>


                    <tr>
                        <td colspan="4" class="category-name">
                            Remarks
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <textarea class="form-control" placeholder="Leave a comment here" asp-for="Remarks">
                                    </textarea>
                        </td>
                    </tr>
                </tbody>
            </table>
    </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const dateAcquired = document.querySelector('#dateAcquired')
        dateAcquired.max = new Date().toISOString().split("T")[0]
    </script>
}

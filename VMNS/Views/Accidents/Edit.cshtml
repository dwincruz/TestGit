@model VMNS.Models.Accident

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Body.cshtml";
}
<form asp-action="Edit" enctype="multipart/form-data" runat="server">
    <div class="row mt-3">    
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatorId" />
        <input type="hidden" asp-for="DateCreated" />
        <div class="col-md-6 col-sm-4 col-6 my-auto">
            <h2><i class="ri-alert-fill icon text-lra-danger"></i> Edit Accident Information </h2>
        </div>
        <div class="col-md-6 col-sm-6 col-6  my-auto position-relative">
            <div class="float-end">
                <a asp-area="" asp-controller="Accidents" asp-action="Index" class="btn btn-sm text-capitalize bg-white rounded"><i class="ri-arrow-go-back-line"></i> Go Back</a>
                <button type="submit" class="btn btn-sm text-white text-capitalize bg-lra-primary rounded "><i class="ri-save-line"></i> Save</button>
            </div>
        </div>
        <div class="col-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row bg-white box-lra-shadow p-4">
            <div class="col-lg-7 col-sm-7 col-12">
                <div class="row">
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.lu_VehicleTypeId"></select>
                                <div class="input-text"><label>Vehicle Type</label></div>
                            </div>
                        </div>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <input type="date"
                                       asp-for="AccidentDate"
                                       id="insuranceDate"
                                       class="form-control "
                                       required
                                       pattern="\S+.*" />
                                <div class="input-text"><label asp-for="AccidentDate"></label></div>
                            </div>
                        </div>
                        <span asp-validation-for="AccidentDate" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <input type="text"
                                       asp-for="Damage"
                                       id=""
                                       class="form-control"
                                       required
                                       pattern="\S+.*" />
                                <div class="input-text"><label asp-for="Damage"></label></div>
                            </div>
                        </div>
                        <span asp-validation-for="Damage" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <select asp-for="lu_DamageScaleId" class="form-control" asp-items="ViewBag.lu_DamageScaleId"></select>
                                <div class="input-text"><label>Damage Scale</label></div>
                            </div>
                        </div>
                        <span asp-validation-for="lu_DamageScaleId" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <input type="text"
                                       asp-for="Remarks"
                                       id=""
                                       class="form-control"
                                       required
                                       pattern="\S+.*" />
                                <div class="input-text"><label asp-for="Remarks"></label></div>
                            </div>
                        </div>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <input type="date"
                                       asp-for="RepairDate"
                                       id="insuranceDate"
                                       class="form-control "
                                       required
                                       pattern="\S+.*" />
                                <div class="input-text"><label asp-for="RepairDate"></label></div>
                            </div>
                        </div>
                        <span asp-validation-for="RepairDate" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12 mb-4">
                        <div class="input-group" id="">
                            <div id="" class="custom-input w-100">
                                <input type="file"
                                       id="file"
                                       name="file"
                                       class="form-control"
                                       accept=".pdf"
                                       multiple />
                                <div class="input-text"><label>Upload PDF</label></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-sm-5 col-12">
                <fieldset class="border-lra rounded mb-3 p-3">
                    <legend class="legend-lra">Preview PDF</legend>
                    <embed src="/@ViewData["FilePath"]" type="application/pdf" id="preview" height="500px" class="w-100">
                </fieldset>

            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>

    file.onchange = evt => {
        const [pdf] = file.files
        if (pdf) {
            preview.src = URL.createObjectURL(pdf)
            console.log(file);
        }
    }
</script>
    Layout = "~/Views/Shared/_Body.cshtml";
}

<ol class="breadcrumb">
  <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li class="breadcrumb-item"><a asp-controller="UsersAdmin" asp-action="Index">Users</a></li>
  <li class="breadcrumb-item active">Delete User</li>
</ol>



<div class="card col-md-12 col-sm-12 mt-4 mb-5 p-3">
    <div class="d-flex">
        <div class="p-2 flex-grow-1">
          <h4 class="fw-semibold mb-3">Admin -Delete User</h4>
        </div>
        <div class="p-2"> <a asp-action="Index" type="button" class="btn btn-light"> << Back to List</a></div>
